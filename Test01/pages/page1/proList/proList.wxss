.con,.con1 {
  font-size:28rpx;
  width: 100%;
}
.con {
  position: fixed; 
  top: 0;
  left: 0; 
  width: 100%;
  height: 192rpx;
  z-index: 10;
}
 .con1 {
  position: absolute;
  top:180rpx; 
 } 
 .con2 {
  position: relative;
  width: 100%;
  height: 200rpx;
} 
/* 头部搜索框 */
.top_search {
  height: 50rpx;
  line-height: 50rpx;
  padding: 40rpx 20rpx;
  background: #345;
}
.top_search input {
  float: left;
  width: 82%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius:  10rpx;
  border: none;
  background: #fff;
  padding:0 10rpx;
}
.top_search button{
  float: left;
  width: calc(18% - 20rpx);
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  border: none;
  padding: 0;
}
.topTip {
  height: 60rpx;
  line-height: 60rpx;
  background: #DBE0E4;
  color: #345;
  padding-left: 30rpx;
}
/* 列表 */
.list {
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #ddd;
  font-size: 24rpx;
}
.loading {
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #70757b;
}
.loading view {
  flex:1;
  text-align: center;
}
.list view {
  flex:1.5;
  padding-left: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden; 
}
.list view:last-child {
  flex: 1;
}